<?xml version="1.0" ?>
<robot name="4WD_rover" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find rr_openrover_description)/urdf/common/common_properties.xacro" />
  <xacro:include filename="$(find rr_openrover_description)/urdf/4WD_Rover/4WD_rover.gazebo.xacro" />
  <xacro:include filename="$(find rr_openrover_description)/urdf/accessories/accessories.urdf.xacro" />

  <xacro:property name="PI" value="3.1415926535897931" />
  <xacro:property name="rover_4wd_ground_clearance" value="0.182" />

  <link name="base_footprint"/>

  <link name="base_link"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="chassis_link">
    <visual>
      <origin xyz="0.142 0 0" rpy="${pi / 2} 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://rr_openrover_description/meshes/4WD_Rover/4WDCore.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.42 0.25 0.12"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="7.5" />
      <inertia ixx="1.340e-1"
               ixy="0.0" iyy="1.713e-1"
               ixz="0.0" iyz="1.815e-3" izz="5.917e-2" />
    </inertial>
  </link>

  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0.127" rpy="0 0 0"/>
  </joint>

  <link name="left_front_wheel_link">
    <visual>
      <origin xyz="0 -0.18 0" rpy="0 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://rr_openrover_description/meshes/4WD_Rover/LeftFrontWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3"
               ixy="0.0" iyy="4.546e-3"
               ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="left_front_wheel_link"/>
    <origin xyz="0.142 0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_front_wheel_link">
    <visual>
      <origin xyz="0 0.18 0" rpy="0 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://rr_openrover_description/meshes/4WD_Rover/RightFrontWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3"
               ixy="0.0" iyy="4.546e-3"
               ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="right_front_wheel_link"/>
    <origin xyz="0.142 -0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_rear_wheel_link">
    <visual>
      <origin xyz="0.284 -0.18 0" rpy="${pi / 2} 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://rr_openrover_description/meshes/4WD_Rover/LeftRearWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3"
               ixy="0.0" iyy="4.546e-3"
               ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="left_rear_wheel_link"/>
    <origin xyz="-0.142 0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_rear_wheel_link">
    <visual>
      <origin xyz="0.284 0.18 0" rpy="${pi / 2} 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://rr_openrover_description/meshes/4WD_Rover/RightRearWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3"
               ixy="0.0" iyy="4.546e-3"
               ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="right_rear_wheel_link"/>
    <origin xyz="-0.142 -0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="mount_point_link"/>

  <joint name="mount_point_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="mount_point_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>
</robot>
